<?xml version = "1.0" encoding = "utf-8"?>
<hibernate-configuration>
    <session-factory>
        <property name = "hibernate.connection.url">jdbc:hsqldb:mem:cities;sql.enforce_size=false</property>
        <property name = "hibernate.connection.driver_class">org.hsqldb.jdbcDriver</property>
        <property name = "hibernate.connection.username">test</property>
        <property name = "hibernate.connection.password"></property>
        <property name = "hibernate.dialect">org.hibernate.dialect.HSQLDialect</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <property name="hibernate.connection.charSet">UTF-8</property>
        <property name="hibernate.connection.characterEncoding">UTF-8</property>
        <property name="hibernate.jdbc.time_zone">Europe/Moscow</property>

        <property name="hbm2ddl.auto">create</property>

        <mapping class="ru.job4j.cars.model.Car" />
        <mapping class="ru.job4j.cars.model.Make" />
        <mapping class="ru.job4j.cars.model.Model" />
        <mapping class="ru.job4j.cars.model.Body" />
        <mapping class="ru.job4j.cars.model.Engine" />
        <mapping class="ru.job4j.cars.model.Drive" />
        <mapping class="ru.job4j.cars.model.Transmission" />
        <mapping class="ru.job4j.cars.model.Advertisement" />
        <mapping class="ru.job4j.cars.model.User" />

    </session-factory>
</hibernate-configuration>